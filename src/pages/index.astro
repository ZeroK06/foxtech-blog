---
import NavBar from '../components/NavBar.astro'
import Wrapper from '../components/Wrapper.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title={'Home'}>
  <header class="min-h-screen">
    <NavBar />
    <Wrapper>
      <section
        class="grid grid-cols-5 grid-rows-2 h-[calc(100vh-80px)] gap-4 py-20"
      >
        <div class="bg-gray-200 rounded-xl col-span-3 row-span-2"></div>
        <div class="bg-gray-200 rounded-xl col-span-2"></div>
        <div class="bg-gray-200 rounded-xl"></div>
        <div class="bg-gray-200 rounded-xl"></div>
        <div class="bg-gray-200 rounded-xl"></div>
      </section>
    </Wrapper>
  </header>
  <main></main>
</Layout>

<style is:global>
  :root {
    --primary: 260 68% 48%;
  }

  .text-primary {
    color: hsl(var(--primary));
  }
  .bg-primary {
    background-color: hsl(var(--primary));
  }
</style>
